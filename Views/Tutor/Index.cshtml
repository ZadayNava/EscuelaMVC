<h1>@ViewBag.Titulo</h1>
<br />
<div class="row">
    <div class="col-md-2" style="text-align:right;">
        <a href="~/Tutor/Nuevo_Tutor" class="btn btn-primary">Nuevo tutor</a>
    </div>
</div>
<br />
<div class="col-md-12 row text-center">
    <div class="table-responsive" style="max-height: 700px; max-height: 700px; overflow: auto; display: inline-block; ">
        <table class="table table-sm ">
            <thead class="table-warning">
                <tr>
                    <th scope="col">Nombre Tutor</th>
                    <th scope="col">Apellido paterno</th>
                    <th scope="col">Apellido Materno</th>
                    <th scope="col">CURP</th>
                    <th scope="col">Sexo</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Parentesco</th>
                    <th scope="col">Direccion</th>
                    <th scope="col">Fecha Nacimiento</th>
                    <th scope="col">Estudiante</th>
                    <th scope="col">Editar</th>
                    <th scope="col">Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tutor in Model)
                {
                    <tr>
                        <td>@tutor.Tutor_.Nombre</td>
                        <td>@tutor.Tutor_.APaterno</td>
                        <td>@tutor.Tutor_.AMaterno</td>
                        <td>@tutor.Tutor_.CURP</td>
                        <td>@tutor.Tutor_.Sexo</td>
                        <td>@tutor.Tutor_.Telefono</td>
                        <td>@tutor.Tutor_.Parentesco</td>
                        <td>@tutor.Tutor_.Direccion</td>
                        <td>@tutor.Tutor_.FechaNacimiento</td>
                        <td>@tutor.estudiante_.Nombre</td>
                        <td>
                            <a class="btn btn-warning" href="~/Tutor/Editar_Tutor/@tutor.Tutor_.ID_Tutor">Editar</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" href="~/Tutor/Confirmar_Eliminar/@tutor.Tutor_.ID_Tutor">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
