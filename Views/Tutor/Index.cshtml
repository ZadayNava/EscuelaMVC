<h1>@ViewBag.Titulo</h1>
<br />
<div class="row">
    <div class="col-md-2" style="text-align:right;">
        <a href="~/Tutor/Nuevo_Tutor" class="btn btn-primary">Nuevo tutor</a>
    </div>
</div>
<br />
<div class="col-md-12 row text-center">
    @foreach (var tutor in Model)
    {
        //Tarjeta de bootstrap
        <div class="col-md-3 col-sm-12">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@tutor.ID_Tutor</h5>
                    <h5 class="card-title">@tutor.Nombre</h5>
                    <h5 class="card-title">@tutor.APaterno</h5>
                    <h5 class="card-title">@tutor.AMaterno</h5>
                    <h5 class="card-title">@tutor.CURP</h5>
                    <h5 class="card-title">@tutor.Sexo</h5>
                    <h5 class="card-title">@tutor.Telefono</h5>
                    <h5 class="card-title">@tutor.Parentesco</h5>
                    <h5 class="card-title">@tutor.Direccion</h5>
                    <h5 class="card-title">@tutor.FechaNacimiento</h5>
                    <h5 class="card-title">@tutor.ID_Estudiante</h5>
                    <a class="btn btn-warning" href="~/Estudiante/Editar_Estudiante/@tutor.ID_Tutor">Editar</a>
                    <a class="btn btn-danger" href="~/Estudiante/Confirmar_Eliminar/@tutor.ID_Tutor">Eliminar</a>
                </div>
            </div>
        </div>
    }
</div>