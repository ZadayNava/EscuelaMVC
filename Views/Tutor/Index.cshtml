<h1>@ViewBag.Titulo</h1>
<br />
<div class="row">
    <div class="col-md-2" style="text-align:right;">
        <a href="~/Tutor/Nuevo_Tutor" class="btn btn-primary">Nuevo tutor</a>
    </div>
</div>
<br />
<div class="col-md-12 row text-center">
    @foreach (var tutor in Model)
    {
        //Tarjeta de bootstrap
        <div class="col-md-3 col-sm-12">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@tutor.Tutor_.Nombre</h5>
                    <h5 class="card-title">@tutor.Tutor_.APaterno</h5>
                    <h5 class="card-title">@tutor.Tutor_.AMaterno</h5>
                    <h5 class="card-title">@tutor.Tutor_.CURP</h5>
                    <h5 class="card-title">@tutor.Tutor_.Sexo</h5>
                    <h5 class="card-title">@tutor.Tutor_.Telefono</h5>
                    <h5 class="card-title">@tutor.Tutor_.Parentesco</h5>
                    <h5 class="card-title">@tutor.Tutor_.Direccion</h5>
                    <h5 class="card-title">@tutor.Tutor_.FechaNacimiento</h5>
                    <h5 class="card-title">Estudiante: @tutor.estudiante_.Nombre</h5>
                    <a class="btn btn-warning" href="~/Tutor/Editar_Tutor/@tutor.Tutor_.ID_Tutor">Editar</a>
                    <a class="btn btn-danger" href="~/Tutor/Confirmar_Eliminar/@tutor.Tutor_.ID_Tutor">Eliminar</a>
                </div>
            </div>
        </div>
    }
</div>