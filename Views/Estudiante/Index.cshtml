@*Reupero el viewbag*@
@*para referenciar un metodo, una variable o un elemento de codigo '@'*@
<h1>@ViewBag.Titulo</h1>
<br />
<div class="row">
    <div class="col-md-2" style="text-align:right;">
        <a href="~/Estudiante/Nuevo_Estudiante" class="btn btn-primary">Nuevo Estudiante</a>
    </div>
</div>
<br />
<div class="col-md-12 row text-center">
    @foreach (var estudiante in Model)
    {
        //Tarjeta de bootstrap
        <div class="col-md-3 col-sm-12">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@estudiante.Estudiante_.Nombre</h5>
                    <h5 class="card-title">@estudiante.Estudiante_.APaterno</h5>
                    <h5 class="card-title">@estudiante.Estudiante_.AMaterno</h5>
                    <h5 class="card-title">@estudiante.Estudiante_.CURP</h5>
                    <h5 class="card-title">@estudiante.Estudiante_.Sexo</h5>
                    <h5 class="card-title">@estudiante.Estudiante_.Telefono</h5>
                    <h5 class="card-title">@estudiante.Estudiante_.Direccion</h5>
                    <h5 class="card-title">@estudiante.Estudiante_.FechaNacimiento</h5>
                    <h5 class="card-title">Grado: @estudiante.Grado_.Grado</h5>
                    <a class="btn btn-warning" href="~/Estudiante/Editar_Estudiante/@estudiante.Estudiante_.ID_Estudiante">Editar</a>
                    <a class="btn btn-danger" href="~/Estudiante/Confirmar_Eliminar/@estudiante.Estudiante_.ID_Estudiante">Eliminar</a>
                </div>
            </div>
        </div>
    }
</div>