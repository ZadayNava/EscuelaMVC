@*Reupero el viewbag*@
@*para referenciar un metodo, una variable o un elemento de codigo '@'*@
<h1>@ViewBag.Titulo</h1>
<br />
<div class="row">
    <div class="col-md-2" style="text-align:right;">
        <a href="~/Estudiante/Nuevo_Estudiante" class="btn btn-primary">Nuevo Estudiante</a>
    </div>
</div>
<br />
<div class="col-md-12 row text-center">
    <table class="table table-sm">
        <thead class="table-warning">
            <tr>
                <th scope="col">Nombre Aluno</th>
                <th scope="col">Apellido paterno</th>
                <th scope="col">Apellido Materno</th>
                <th scope="col">CURP</th>
                <th scope="col">Sexo</th>
                <th scope="col">Telefono</th>
                <th scope="col">Direccion</th>
                <th scope="col">Fecha Nacimiento</th>
                <th scope="col">Grado</th>
                <th scope="col">Editar</th>
                <th scope="col">Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var estudiante in Model)
            {

                <tr>
                    <td>@estudiante.Estudiante_.Nombre</td>
                    <td>@estudiante.Estudiante_.APaterno</td>
                    <td>@estudiante.Estudiante_.AMaterno</td>
                    <td>@estudiante.Estudiante_.CURP</td>
                    <td>@estudiante.Estudiante_.Sexo</td>
                    <td>@estudiante.Estudiante_.Telefono</td>
                    <td>@estudiante.Estudiante_.Direccion</td>
                    <td>@estudiante.Estudiante_.FechaNacimiento</td>
                    <td>@estudiante.Grado_.Grado</td>
                    <td>
                        <a class="btn btn-warning" href="~/Estudiante/Editar_Estudiante/@estudiante.Estudiante_.ID_Estudiante">Editar</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="~/Estudiante/Confirmar_Eliminar/@estudiante.Estudiante_.ID_Estudiante">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>