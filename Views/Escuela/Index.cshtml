@*Reupero el viewbag*@
@*para referenciar un metodo, una variable o un elemento de codigo '@'*@
<h1>@ViewBag.Titulo</h1>
<br />
<div class="row">
    <div class="col-md-2" style="text-align:right;">
        <a href="~/Escuela/Nueva_Escuela" class="btn btn-primary">Nueva Escuela</a>
    </div>
</div>
<br />
<div class="col-md-12 row text-center mt-xxl-auto center-block justify-content-center">
    @foreach (var escuela in Model)
    {
        //Tarjeta de bootstrap
        <div class="card text-center " style="width: 18rem; margin: 10px;">
            <div class="card-body">
                <h4 class="card-title">@escuela.Nombre</h4><br />
                <h5 class="card-subtitle">@escuela.Clave</h5>
                <p class="card-text">@escuela.Telefono</p>
                <p class="card-text">@escuela.Nivel</p>
                <p class="card-text">@escuela.Direccion</p>
                <p class="card-text">@escuela.FechaFundacion</p>
                <a class="btn btn-warning" href="~/Escuela/Editar_Escuela/@escuela.ID_Escuela">Editar</a>
                <a class="btn btn-danger" href="~/Escuela/Confirmar_Eliminar/@escuela.ID_Escuela">Eliminar</a>
            </div>
        </div>
    }
</div>